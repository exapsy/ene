<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>E2E Test Report</title>
    <style>
        /* Color variables - light mode (default) */
        :root {
            --color-background: #f5f7fa;
            --color-card-background: #ffffff;
            --color-primary: #3498db;
            --color-success: #2ecc71;
            --color-warning: #f39c12;
            --color-danger: #e74c3c;
            --color-light: #f8f9fa;
            --color-dark: #343a40;
            --color-gray: #6c757d;
            --color-gray-light: #e9ecef;
            --color-text: #343a40;
            --color-border: rgba(0,0,0,0.1);
            --logo-filter: invert(1); /* Invert white logo to black */
        }

        :root[data-theme="dark"] {
            --color-background: #1a1a1a;
            --color-card-background: #2d2d2d;
            --color-primary: #61afef;
            --color-success: #98c379;
            --color-warning: #e5c07b;
            --color-danger: #e06c75;
            --color-light: #abb2bf;
            --color-dark: #dcdfe4;
            --color-gray: #9da5b4;
            --color-gray-light: #3a3a3a;
            --color-text: #dcdfe4;
            --color-border: rgba(255,255,255,0.1);
            --logo-filter: none; /* Don't invert in dark mode (keep white) */
        }

        :root[data-theme="light"] {
            --color-background: #f5f7fa;
            --color-card-background: #ffffff;
            --color-primary: #3498db;
            --color-success: #2ecc71;
            --color-warning: #f39c12;
            --color-danger: #e74c3c;
            --color-light: #f8f9fa;
            --color-dark: #343a40;
            --color-gray: #6c757d;
            --color-gray-light: #e9ecef;
            --color-text: #343a40;
            --color-border: rgba(0,0,0,0.1);
            --logo-filter: invert(1); /* Invert white logo to black */
        }

        /* Apply variables to all elements */
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        }

        body {
            background-color: var(--color-background);
            color: var(--color-text);
            line-height: 1.6;
            padding: 0;
            margin: 0;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .logo-container {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
        }

        .logo {
            max-height: 50px;
            max-width: 200px;
            filter: var(--logo-filter);
            transition: filter 0.3s ease;
            no-select: all;
        }

        .header-info {
            flex-grow: 1;
        }

        header {
            background-color: var(--color-card-background);
            box-shadow: 0 2px 5px var(--color-border);
            padding: 20px;
            margin-bottom: 30px;
            border-radius: 5px;
            display: flex;
            flex-direction: column;
        }

        h1 {
            color: var(--color-primary);
            margin-bottom: 10px;
        }

        h2 {
            margin: 20px 0 15px;
            color: var(--color-text);
            border-bottom: 1px solid var(--color-gray-light);
            padding-bottom: 10px;
        }

        h3 {
            margin: 15px 0 10px;
            color: var(--color-text);
        }

        .summary {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .summary-card {
            background-color: var(--color-card-background);
            border-radius: 5px;
            padding: 20px;
            box-shadow: 0 2px 5px var(--color-border);
            text-align: center;
        }

        .summary-card h3 {
            margin-top: 0;
            color: var(--color-gray);
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .summary-card .value {
            font-size: 2.5rem;
            font-weight: bold;
            margin: 10px 0;
        }

        .success {
            color: var(--color-success);
        }

        .warning {
            color: var(--color-warning);
        }

        .danger {
            color: var(--color-danger);
        }

        .primary {
            color: var(--color-primary);
        }

        .test-suites {
            margin-bottom: 30px;
        }

        .suite {
            background-color: var(--color-card-background);
            border-radius: 5px;
            box-shadow: 0 2px 5px var(--color-border);
            margin-bottom: 20px;
            overflow: hidden;
        }

        .suite-header {
            padding: 15px 20px;
            background-color: var(--color-gray-light);
            font-weight: bold;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .suite-body {
            padding: 0;
        }

        .test-item {
            padding: 15px 20px;
            border-top: 1px solid var(--color-gray-light);
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
        }

        .test-info {
            flex-grow: 1;
        }

        .test-name {
            font-weight: 500;
            margin-bottom: 5px;
        }

        .test-message {
            background-color: var(--color-gray-light);
            padding: 10px;
            border-radius: 3px;
            margin-top: 10px;
            font-family: monospace;
            white-space: pre-wrap;
            overflow-x: auto;
        }

        .test-status {
            margin-left: 15px;
            font-weight: bold;
            min-width: 80px;
            text-align: right;
        }

        .test-duration {
            font-size: 0.8rem;
            color: var(--color-gray);
        }

        .footer {
            text-align: center;
            margin-top: 30px;
            padding: 15px;
            color: var(--color-gray);
            font-size: 0.9rem;
        }

        .badge {
            display: inline-block;
            padding: 3px 8px;
            border-radius: 3px;
            font-size: 0.8rem;
            font-weight: bold;
            text-transform: uppercase;
        }

        .badge-success {
            background-color: rgba(46, 204, 113, 0.1);
            color: var(--color-success);
        }

        .badge-danger {
            background-color: rgba(231, 76, 60, 0.1);
            color: var(--color-danger);
        }

        .badge-warning {
            background-color: rgba(243, 156, 18, 0.1);
            color: var(--color-warning);
        }

        /* Theme toggle button */
        .theme-toggle {
            position: fixed;
            top: 20px;
            right: 20px;
            background-color: var(--color-card-background);
            border: 1px solid var(--color-gray-light);
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            box-shadow: 0 2px 5px var(--color-border);
            z-index: 100;
        }

        .theme-toggle svg {
            width: 24px;
            height: 24px;
            fill: var(--color-text);
        }

        @media (max-width: 768px) {
            .summary {
                grid-template-columns: 1fr;
            }
            header {
                flex-direction: column;
            }
            .logo-container {
                margin-bottom: 15px;
            }
        }
    </style>
</head>
<body>
<!-- Add theme toggle button -->
<div class="theme-toggle" id="themeToggle">
    <svg xmlns="http://www.w3.org/2000/svg" id="lightIcon" viewBox="0 0 24 24"><path d="M12 7c-2.76 0-5 2.24-5 5s2.24 5 5 5 5-2.24 5-5-2.24-5-5-5zM2 13h2c.55 0 1-.45 1-1s-.45-1-1-1H2c-.55 0-1 .45-1 1s.45 1 1 1zm18 0h2c.55 0 1-.45 1-1s-.45-1-1-1h-2c-.55 0-1 .45-1 1s.45 1 1 1zM11 2v2c0 .55.45 1 1 1s1-.45 1-1V2c0-.55-.45-1-1-1s-1 .45-1 1zm0 18v2c0 .55.45 1 1 1s1-.45 1-1v-2c0-.55-.45-1-1-1s-1 .45-1 1zM5.99 4.58c-.39-.39-1.03-.39-1.41 0-.39.39-.39 1.03 0 1.41l1.06 1.06c.39.39 1.03.39 1.41 0s.39-1.03 0-1.41L5.99 4.58zm12.37 12.37c-.39-.39-1.03-.39-1.41 0-.39.39-.39 1.03 0 1.41l1.06 1.06c.39.39 1.03.39 1.41 0 .39-.39.39-1.03 0-1.41l-1.06-1.06zm1.06-10.96c.39-.39.39-1.03 0-1.41-.39-.39-1.03-.39-1.41 0l-1.06 1.06c-.39.39-.39 1.03 0 1.41s1.03.39 1.41 0l1.06-1.06zM7.05 18.36c.39-.39.39-1.03 0-1.41-.39-.39-1.03-.39-1.41 0l-1.06 1.06c-.39.39-.39 1.03 0 1.41s1.03.39 1.41 0l1.06-1.06z"/></svg>
    <svg xmlns="http://www.w3.org/2000/svg" id="darkIcon" style="display:none" viewBox="0 0 24 24"><path d="M12 3c-4.97 0-9 4.03-9 9s4.03 9 9 9 9-4.03 9-9c0-.46-.04-.92-.1-1.36-.98 1.37-2.58 2.26-4.4 2.26-2.98 0-5.4-2.42-5.4-5.4 0-1.81.89-3.42 2.26-4.4-.44-.06-.9-.1-1.36-.1z"/></svg>
</div>

<div class="container">
    <header>
        <div class="logo-container">
            <img src="{{.LogoBase64}}" alt="e2eframe Logo" class="logo" />
        </div>
        <div class="header-info">
            <div>
                <span>Started: {{.StartTime.Format "Jan 02, 2006 15:04:05"}}</span> |
                <span>Completed: {{.EndTime.Format "Jan 02, 2006 15:04:05"}}</span> |
                <span>Duration: {{printf "%.2f" .Duration.Seconds}}s</span>
            </div>
        </div>
    </header>

    <div class="summary">
        <div class="summary-card">
            <h3>Total Tests</h3>
            <div class="value primary">{{.TotalTests}}</div>
        </div>
        <div class="summary-card">
            <h3>Passed</h3>
            <div class="value success">{{.TotalPassed}}</div>
            {{if gt .TotalPassed 0}}
            <div>{{printf "%.1f" (mul (div (float64 .TotalPassed) (float64 .TotalTests)) 100)}}%</div>
            {{end}}
        </div>
        <div class="summary-card">
            <h3>Failed</h3>
            <div class="value danger">{{.TotalFailed}}</div>
            {{if gt .TotalFailed 0}}
            <div>{{printf "%.1f" (mul (div (float64 .TotalFailed) (float64 .TotalTests)) 100)}}%</div>
            {{end}}
        </div>
        <div class="summary-card">
            <h3>Skipped</h3>
            <div class="value warning">{{.TotalSkipped}}</div>
        </div>
    </div>

    <h2>Test Suites</h2>

    <div class="test-suites">
        {{range $suiteName, $tests := .TestsBySuite}}
        <div class="suite">
            <div class="suite-header">
                <div>{{$suiteName}}</div>
                <div>
                    {{$passCount := 0}}
                    {{$failCount := 0}}
                    {{range $tests}}
                    {{if .Passed}}
                    {{$passCount = add $passCount 1}}
                    {{else}}
                    {{$failCount = add $failCount 1}}
                    {{end}}
                    {{end}}
                    <span class="badge {{if eq $failCount 0}}badge-success{{else}}badge-danger{{end}}">
                            {{$passCount}}/{{len $tests}} passed
                        </span>
                </div>
            </div>
            <div class="suite-body">
                {{range $tests}}
                <div class="test-item">
                    <div class="test-info">
                        <div class="test-name">{{.TestName}}</div>
                        <div class="test-duration">Duration: {{printf "%.2f" .Duration.Seconds}}s</div>
                        {{if not .Passed}}
                        <div class="test-message">{{.Message}}</div>
                        {{end}}
                    </div>
                    <div class="test-status {{if .Passed}}success{{else}}danger{{end}}">
                        {{if .Passed}}PASS{{else}}FAIL{{end}}
                    </div>
                </div>
                {{end}}
            </div>
        </div>
        {{end}}
    </div>

    {{if .SkippedSuites}}
    <h2>Skipped Tests</h2>
    <div class="test-suites">
        {{range .SkippedSuites}}
        <div class="suite">
            <div class="suite-header">
                <div>{{.SuiteName}}</div>
                <div>
                        <span class="badge badge-warning">
                            Skipped {{.TotalSuiteTests}} tests
                        </span>
                </div>
            </div>
            <div class="suite-body">
                <div class="test-item">
                    <div class="test-info">
                        <div class="test-name">Suite skipped</div>
                        <div class="test-message">{{.Message}}</div>
                    </div>
                    <div class="test-status warning">SKIP</div>
                </div>
            </div>
        </div>
        {{end}}
    </div>
    {{end}}

    <div class="footer">
        Generated on {{.EndTime.Format "Jan 02, 2006 at 15:04:05"}}
    </div>
</div>

<script>
    // Theme toggle functionality
    const themeToggle = document.getElementById('themeToggle');
    const lightIcon = document.getElementById('lightIcon');
    const darkIcon = document.getElementById('darkIcon');
    const prefersDarkScheme = window.matchMedia('(prefers-color-scheme: dark)');

    // Check for saved theme preference or use system preference
    const currentTheme = localStorage.getItem('theme') ||
                        (prefersDarkScheme.matches ? 'dark' : 'light');

    // Initial theme setup
    if (currentTheme === 'dark') {
        document.documentElement.setAttribute('data-theme', 'dark');
        lightIcon.style.display = 'none';
        darkIcon.style.display = 'block';
    } else {
        document.documentElement.removeAttribute('data-theme');
        lightIcon.style.display = 'block';
        darkIcon.style.display = 'none';
    }

    // Theme toggle handler
    themeToggle.addEventListener('click', () => {
        // Check current theme
        const currentTheme = document.documentElement.getAttribute('data-theme');

        // Toggle theme
        if (currentTheme === 'dark') {
            document.documentElement.setAttribute('data-theme', 'light');
            lightIcon.style.display = 'block';
            darkIcon.style.display = 'none';
            localStorage.setItem('theme', 'light');
        } else {
            document.documentElement.setAttribute('data-theme', 'dark');
            lightIcon.style.display = 'none';
            darkIcon.style.display = 'block';
            localStorage.setItem('theme', 'dark');
        }
    });
</script>

</body>
</html>